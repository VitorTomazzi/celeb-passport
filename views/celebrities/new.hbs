<div class='add-new'>
    <h2> Add new celeb </h2>

    <form action="/celebrity" method="POST">

        <div>
            <p>Name:</p>
            <input type="text" name='theName'>

            <p>Occupation:</p>
            <input type="text" name='theOccupation'>

            <p>Catch Phrase:</p>
            <input type="text" name='theCatchPhrase'>
        </div>

        <div>
            <p>Stars in:</p>
            <select name="theMovie" id="movies-list">
                <option value="" selected disabled> Please Select One</option>

                {{#each movies}}
                <option value="{{this._id}}">{{this.title}}</option>
                {{/each}}

            </select>
        </div>

        <div>
            <p>Image:</p>
            <input type="text" name='theImage'>
        </div>

        <div>
            <button type="submit">SAVE</button>
        </div>

    </form>
</div>